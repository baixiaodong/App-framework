<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_h5_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地数据展示"/>

    <Button
        android:id="@+id/btn_h5_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_h5_local"
        android:text="动态获取数据"/>

    <Button
        android:id="@+id/btn_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_h5_remote"
        android:text="List View"/>

    <Button
        android:id="@+id/btn_slide_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_listview"
        android:text="Slide List View"/>

    <Button
        android:id="@+id/btn_swipe_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_slide_listview"
        android:text="Swipe Gesture"/>

    <Button
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_swipe_gesture"
        android:text="动画 animation"/>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_animation"
        android:text="弹出对话框"/>

    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dialog"
        android:text="Scroll View"/>

    <Button
    android:id="@+id/btn_cover_flow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/btn_scroll_view"
    android:text="Cover Flow"/>


    <Button
        android:id="@+id/btn_activity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_cover_flow"
        android:text="Activity Layout"/>

    <Button
        android:id="@+id/btn_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_activity_layout"
        android:text="Widget"/>


    <Button
        android:id="@+id/btn_swipe_gesture7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_widget"
        android:text="Swipe Gesture7"/>


</RelativeLayout>
</ScrollView>