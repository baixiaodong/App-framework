<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.baixd.app.framework.storage.StorageActivity">

            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四大存储" />

            <LinearLayout
                android:id="@+id/ll_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_storage"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tv_storage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/tv_storage_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_shared_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_storage"
                android:text="SharedPreferences存储" />

            <Button
                android:id="@+id/btn_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_shared_preferences"
                android:text="file存储" />

            <Button
                android:id="@+id/btn_sqlite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_file"
                android:text="sqlite存储" />

            <Button
                android:id="@+id/btn_content_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_sqlite"
                android:text="Content Provider存储" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/btn_content_provider"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="#00FF00" />

            <Button
                android:id="@+id/btn_f_shared_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line"
                android:text="SharedPreferences取出" />

            <Button
                android:id="@+id/btn_f_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_f_shared_preferences"
                android:text="file取出" />

            <Button
                android:id="@+id/btn_f_sqlite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_f_file"
                android:text="sqlite取出" />

            <Button
                android:id="@+id/btn_f_content_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_f_sqlite"
                android:text="Content Provider取出" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>